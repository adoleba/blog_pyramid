{% extends  "../base.jinja2" %}

{% block content %}

    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Change password user "{{ user.username }}</h4>
                        <div class="row">
                            <form action="{{request.route_url('user_password_edit', username=user.username)}}" method="post" class="form">
                                {% for error in form.password.errors %}
                                    <div class="error">{{ error }}</div>
                                {% endfor %}
                                <div class="form-group">
                                    <label for="password">{{form.password.label}}</label>
                                    {{form.password(class_='form-control')}}
                                </div>

                                {% for error in form.password2.errors %}
                                    <div class="error">{{ error }}</div>
                                {% endfor %}
                                <div class="form-group">
                                    <label for="password2">{{form.password2.label}}</label>
                                    {{form.password2(class_='form-control')}}
                                </div>


                                <div class="form-group">
                                <label></label>
                                <button type="submit" class="btn btn-info">Change</button>
                                <a href="{{ request.route_url('user_profile', username=user.username) }}" class="btn btn-secondary">Cancel</a>
                                </div>

                            </form>
                        </div>
                </div>
            </div>
        </div>
    </div>



{% endblock %}
