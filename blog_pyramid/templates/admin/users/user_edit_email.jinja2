{% extends  "../base.jinja2" %}

{% block content %}

    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">{{ title }}</h4>
                        <div class="row">
                            <form action="{{ request.route_url('user_email_edit', username=user.username) }}" method="post" class="form">
                                {% for error in form.email.errors %}
                                    <div class="error">{{ error }}</div>
                                {% endfor %}
                                <div class="form-group">
                                    <label for="email">{{ form.email.label }}</label>
                                    {{ form.email(class_='form-control') }}
                                </div>

                                <div class="form-group">
                                <label></label>
                                <button type="submit" class="btn btn-info">Save</button>
                                <a href="{{ request.route_url('user_profile', username=user.username) }}" class="btn btn-secondary">Cancel</a>
                                </div>

                            </form>
                        </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}
