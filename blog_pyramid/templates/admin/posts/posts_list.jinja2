{% extends  "../base.jinja2" %}

{% block content %}


    <div class="row page-titles">
        <div class="col-md-12">
            <h4>{{ title }}</h4>
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    <a href="{{ request.route_url('post_create') }}" class="btn btn-info btn-rounded m-t-10 float-right">Add New Post</a>

                    <div class="table-responsive">
                        <table id="demo-foo-addrow" class="table table-bordered m-t-30 table-hover contact-list" style="width: 100%">

                            <colgroup>
                                <col span="1" style="width: 3%;">
                                <col span="1" style="width: 31%;">
                                <col span="1" style="width: 15%;">
                                <col span="1" style="width: 15%;">
                                <col span="1" style="width: 10%;">
                                <col span="1" style="width: 10%;">
                                <col span="1" style="width: 16%;">
                            </colgroup>
                            <thead>
                            <tr>
                                <th>Id</th>
                                <th>Title</th>
                                <th>Created</th>
                                <th>Edited</th>
                                <th>Author</th>
                                <th>Category</th>
                                <th>Action</th>

                            </tr>
                            </thead>
                            <tbody>
                            {% for post in posts %}
                                <tr>
                                    <td>{{ post.id }}</td>
                                    <td>{{ post.title }}</td>
                                    <td>{{ post.created.strftime('%Y-%m-%d')}}</td>
                                    <td>{{ post.edited.strftime('%Y-%m-%d')}}</td>
                                    <td>{{ post.author}}</td>
                                    <td>{{ post.category }}</td>
                                <td>
                                    <a href="{{ request.route_url('post_edit', slug=post.slug) }}" class="btn btn-sm btn-dark">Edit</a>
                                    <a href="{{ request.route_url('post_delete', slug=post.slug) }}" class="btn btn-sm btn-danger">Delete</a>
                                </tr>
                            {% endfor %}

                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}